<!DOCTYPE html>
<html>
 <head>
 <% include ./partials/head %>
 </head>
 <body>
   <header>
     <% include ./partials/navbar %>
   </header>
   <h1 class='center'>Movies</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4'>
       <h3>Add Movie</h3>
       <%#The action is where it goes and the action is how it gets there %>
       <form action='/movies' method='post'>
         <input type='text' name='name' placeholder='name' />
         <button class='btn btn-waves' type='submit'>Add Movie</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Title</th>
         <th>x</th>
       </thead>
       <tbody>
         <% movies.forEach( function(movie) { %>
           <% var url='/movies/delete/' + movie.replace(/ /g, "%20") %>
           <tr>
             <td><%= movie %></td>
             <td><a href=<%= url %> + <%= movie %></a>Delete</td>
         <% }); %>
       </tbody>
     </table>
   </body>
</html>
